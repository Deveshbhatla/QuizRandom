<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/indian_background"
    android:layout_height="match_parent">





        <TextView
            android:id="@+id/button_about_us"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="हमारे बारे में"
            android:paddingLeft="20dp"
            android:clickable="true"
            android:gravity="left"
            android:textColor="#000000"
            android:textSize="30dp"
            android:layout_toEndOf="@+id/about"
            />





        <TextView
            android:id="@+id/button_contact_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="संपर्क करें"
            android:textSize="40dp"
            android:clickable="true"
            android:paddingLeft="20dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/sign_out"
            />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="35dp">

        <ImageView
            android:id="@+id/terms"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:src="@drawable/ic_local_phone_black_24dp" />
        <TextView
            android:id="@+id/button_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+91 9711358321"
            android:textSize="20sp"
            android:gravity="left"
            android:textColor="#000000"
            android:clickable="true"
            android:paddingLeft="20dp"
            android:layout_toRightOf="@+id/terms"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="35dp">

        <ImageView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:src="@drawable/ic_email_black_24dp" />
        <TextView
            android:id="@+id/button_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  deveshbhatla952@gmail.com"
            android:textSize="20sp"
            android:gravity="left"
            android:textColor="#000000"
            android:clickable="true"
            android:paddingLeft="20dp"
            />


    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="कुछ उपयोगी लिंक"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textColor="#000000"

        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_height="135dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:layout_marginLeft="10sp"

            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/nptel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nptel.ac.in"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#431AF6"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   (आईआईटी प्रोफेसर के वीडियो के लिए)"
                android:textSize="17dp"
                android:gravity="center"
                android:textColor="#000000"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:gravity="left"
            android:layout_marginLeft="10sp"

            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/vigyanprasar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vigyanprasar.gov.in"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#431AF6"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    (विज्ञान कीट)"
                android:textSize="17dp"
                android:gravity="center"
                android:textColor="#000000"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="70dp"
            android:gravity="left"
            android:layout_marginLeft="10sp"

            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/bhartiscript"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bhartiscript.com"
                android:textSize="20dp"
                android:gravity="left"
                android:textColor="#431AF6"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="     (भारति लिपि)"
                android:textSize="17dp"
                android:gravity="center"
                android:textColor="#000000"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="100dp"
            android:gravity="left"
            android:layout_marginLeft="10sp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/arvindguptatoys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="arvindguptatoys.com"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#431AF6"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    (विज्ञान प्रयोग)"
                android:textSize="17dp"
                android:gravity="center"
                android:textColor="#000000"
                />
        </LinearLayout>



    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"

        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Created By: Devesh Bhatla(deveshbhatla952@gmail.com)"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Classical Background music Courtesy: Sreevastav "
        android:textColor="#000000"

        />
</LinearLayout>